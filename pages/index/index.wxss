/**index.wxss**/
.body{
  margin: 10px 10px 50px;
}
/* iphone5 */
@media (max-width: 320px) {
  .body {
    font-size: 12px;
  }
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.week{
  /* border: 1rpx solid orange; */
  display: inline-block;
  text-align: center;
  line-height: 40px;
}

.date{
  /* border:1px dashed blueviolet; */
  /* display:inline-block; */
  position:relative;
  display:flex;
  flex-direction:column;
  justify-content:space-evenly;
  align-items: center;
  float:left;
  margin-bottom: 1rem;
  border-radius: 6px;
  box-sizing: border-box;
  padding: 4px 4px;
}

.date text.status{
  position:absolute;
  top:0px;
  right: 4px;
  font-size: 0.8rem;
  color:#3584ff;
  max-width:100%;
  text-overflow:ellipsis;
  overflow-x:hidden;
  white-space:nowrap;
}
.date text.day{
  /* display: inline-block;
  width:100%;
  height:100%; */
  text-align:center;
  /* margin:0 auto; */
  font-size: 1rem;
  /* line-height:106rpx; */

}
.date .lunar {
}
.date text.lunar{
  position: absolute;
  bottom:0px;
  left:0px;
  right:0px;
  color:gray;
  font-size:0.8em;
  text-align: center;
}
.date text.lunar.red{
  color:red;
}
.date.law-holiday {
  color: #F73131;
  background-color: #FDE3E4;
}
.date.meaningful{
  color:purple;
  background-color: #fec5ff;
}

.month-title{
  color:red;
  text-align: center;
  height:40px;
  display:flex;
  flex-direction:column;
  justify-content:center;

}
.month-block{
  /* border: 1rpx solid orange; */
  clear:both;
}
.calendar{
  padding: 0rpx 5rpx;
}
.calendar-body{
  height: 900rpx;
}

.picker{
  height:100px;
}
.picker .picker-prompt{
  height: 100px;
  line-height: 100px;
  font-size: 1em;
}
.picker .TPicker{
  height: 100%;
  width: 80px;
  float: right;
  padding: 0px 10px;
}
.day-status-input {
  font-size: 0.8rem;
}
.switcher{
  height:32px;
  margin: 24px 10px 10px;
}
.switcher text{
  height:100%;
  line-height: 32px;
}
.switcher switch{
  float:right;
}
.set-content{
  margin: 10px;
}
.section{
  font-size: 1rem;
  padding: 10px 5px;
  /* border-bottom: dashed 1px #cecece; */
  width:30%;
  float:left;

  }
.section input{border: solid 1px #ccc;padding: 0 5px;background-color: #fff;border-radius: 4px;height: 30px;}
.clear-float{
  clear:both;
}
.pad-bottom{
  height:34px;
}
.date text.day.today{
  color:orange;
  font-weight:bold;
}
.jump-today{
  color:orange;
  margin-left: 5px;
  font-weight: bold;
}